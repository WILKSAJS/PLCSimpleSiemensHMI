<UserControl x:Class="PLCSiemensSymulatorHMI.Views.HmiStatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLCSiemensSymulatorHMI.Views"
             mc:Ignorable="d">
    
    <Grid>
        <StatusBar Background="DarkSlateGray">
            <TextBlock Foreground="White" Text="{Binding ConnectionState, StringFormat=Connection state:{0}}"/>
            <Separator Background="Tan"/>
            <TextBlock Foreground="White" Text="{Binding TimeScan, StringFormat=TimeScan {0}}"/>
            <Separator Background="Tan"/>
            <TextBlock Foreground="White" Text="{Binding Name}"/>
            <Separator Background="Tan"/>
            <TextBlock Foreground="White" Text="{Binding IpAdress}"/>
            <Separator Background="Tan"/>
            <TextBlock Foreground="White" Text="{Binding Rack}"/>
            <Separator Background="Tan"/>
            <TextBlock Foreground="White" Text="{Binding Slot}"/>
        </StatusBar>
    </Grid>
</UserControl>
