<Window x:Class="PLCSiemensSymulatorHMI.Views.CreateControlView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLCSiemensSymulatorHMI.Views"
        mc:Ignorable="d"
        Title="CreateControlView" Height="380" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <Label Content="Control Name" Width="auto" Height="auto" Margin="30,0"/>
            <TextBox x:Name="ControlName" Margin="30,0"/>
            <Label Content="Data Block" Width="auto" Height="auto" Margin="30,0"/>
            <TextBox x:Name="DataBlock" Margin="30,0"/>
            <Label Content="Index" Width="auto" Height="auto" Margin="30,0"/>
            <TextBox x:Name="Index" Margin="30,0"/>
            <Label Content="Offset" Width="auto" Height="auto" Margin="30,0"/>
            <TextBox x:Name="Offset" Margin="30,0"/>
            <ComboBox x:Name="ControlType" Margin="30,30"/>
            <Button x:Name="Submit" Content="Submit" Margin="30,30" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
